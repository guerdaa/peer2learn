<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/group_result">

    <TextView
        android:id="@+id/group_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blue"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/description_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/group_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blue"/>
    <LinearLayout
        android:id="@+id/group_stat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/number_of_users_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/number_of_users_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/team"
                android:tint="@color/blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/number_of_users_text_view"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/language_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/language"
                android:tint="@color/blue"/>
            <TextView
                android:id="@+id/language_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/progress_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/progress"
                android:tint="@color/blue"/>
            <TextView
                android:id="@+id/progress_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/join_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:text="@string/join"
            android:gravity="center"
            android:textColor="@color/green"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:id="@+id/padding_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>