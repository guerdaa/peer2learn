<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/group_item">

    <TextView
        android:id="@+id/group_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Placeholder"/>

    <TextView
        android:id="@+id/last_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_below="@id/group_title_text_view"
        android:text="@string/group_initially_created"/>

    <ImageView
        android:id="@+id/unread_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:tint="@color/green"
        android:layout_below="@id/group_title_text_view"
        android:visibility="gone"
        android:layout_toLeftOf="@id/menu_image_view"
        android:layout_marginEnd="10dp"
        android:src="@drawable/circle"/>

    <ImageView
        android:id="@+id/menu_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@color/black"
        android:padding="5dp"
        android:layout_below="@id/group_title_text_view"
        android:layout_alignParentEnd="true"
        android:src="@drawable/more"/>

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />
    <View
        android:id="@+id/padding_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_below="@id/last_message_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

</RelativeLayout>